<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.business.BizPostCollectDao">

    <sql id="baseColumn">
        t.id,
        t.post_id,
        t.user_id,
        t.thumb_time,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.business.entity.BizPostCollect" > 
        <id property="id" column="id"/>
        <result property="post_id" column="postId"/>
        <result property="user_id" column="userId"/>
        <result property="thumb_time" column="thumbTime"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <select id="list" resultType="com.aladdin.mis.business.vo.BizPostCollectVo">
        select <include refid="baseColumn"></include>
        from biz_post_collect t where t.sys005 = 1
        <if test="postId  != null and postId != '' ">
            and t.post_id = #{postId}
        </if>
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="thumbTime  != null and thumbTime != '' ">
            and t.thumb_time = #{thumbTime}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

    <!-- *************GenerateXmlUtils************** -->
</mapper>
