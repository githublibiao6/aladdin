<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.business.BizMemoGroupDao">

    <sql id="baseColumn">
        t.user_id,
        t.group_number,
        t.group_name,
        t.order_num
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.business.entity.BizMemoGroup" > 
        <result property="user_id" column="userId"/>
        <result property="group_number" column="groupNumber"/>
        <result property="group_name" column="groupName"/>
        <result property="order_num" column="orderNum"/>
    </resultMap>

    <!-- *************GenerateXmlUtils************** -->
    <select id="list" resultType="com.aladdin.mis.business.vo.BizMemoGroupVo">
        select <include refid="baseColumn"></include>
        from biz_memo_group t where t.sys005 = 1
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="groupNumber  != null and groupNumber != '' ">
            and t.group_number = #{groupNumber}
        </if>
        <if test="groupName  != null and groupName != '' ">
            and t.group_name = #{groupName}
        </if>
        <if test="orderNum  != null and orderNum != '' ">
            and t.order_num = #{orderNum}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

</mapper>
