<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.business.BizMemoDao">

    <sql id="baseColumn">
        t.id,
        t.user_id,
        t.group_id,
        t.content,
        t.memo_type,
        t.top,
        t.done,
        t.remind,
        t.remind_type,
        t.importance,
        t.next_remind_time,
        t.remind_info,
        t.create_time,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.business.entity.BizMemo" > 
        <id property="id" column="id"/>
        <result property="user_id" column="userId"/>
        <result property="group_id" column="groupId"/>
        <result property="content" column="content"/>
        <result property="memo_type" column="memoType"/>
        <result property="top" column="top"/>
        <result property="done" column="done"/>
        <result property="remind" column="remind"/>
        <result property="remind_type" column="remindType"/>
        <result property="importance" column="importance"/>
        <result property="next_remind_time" column="nextRemindTime"/>
        <result property="remind_info" column="remindInfo"/>
        <result property="create_time" column="createTime"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <!-- *************GenerateXmlUtils************** -->
    <select id="list" resultType="com.aladdin.mis.business.vo.BizMemoVo">
        select <include refid="baseColumn"></include>
        from biz_memo t where t.sys005 = 1
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="groupId  != null and groupId != '' ">
            and t.group_id = #{groupId}
        </if>
        <if test="content  != null and content != '' ">
            and t.content = #{content}
        </if>
        <if test="memoType  != null and memoType != '' ">
            and t.memo_type = #{memoType}
        </if>
        <if test="top  != null and top != '' ">
            and t.top = #{top}
        </if>
        <if test="done  != null and done != '' ">
            and t.done = #{done}
        </if>
        <if test="remind  != null and remind != '' ">
            and t.remind = #{remind}
        </if>
        <if test="remindType  != null and remindType != '' ">
            and t.remind_type = #{remindType}
        </if>
        <if test="importance  != null and importance != '' ">
            and t.importance = #{importance}
        </if>
        <if test="nextRemindTime  != null and nextRemindTime != '' ">
            and t.next_remind_time = #{nextRemindTime}
        </if>
        <if test="remindInfo  != null and remindInfo != '' ">
            and t.remind_info = #{remindInfo}
        </if>
        <if test="createTime  != null and createTime != '' ">
            and t.create_time = #{createTime}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

</mapper>
