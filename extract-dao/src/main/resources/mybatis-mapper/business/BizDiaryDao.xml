<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.business.BizDiaryDao">

    <sql id="baseColumn">
        t.id,
        t.user_id,
        t.user_name,
        t.user_pic,
        t.content,
        t.create_date,
        t.create_time,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.business.entity.BizDiary" > 
        <id property="id" column="id"/>
        <result property="user_id" column="userId"/>
        <result property="user_name" column="userName"/>
        <result property="user_pic" column="userPic"/>
        <result property="content" column="content"/>
        <result property="create_date" column="createDate"/>
        <result property="create_time" column="createTime"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <!-- *************GenerateXmlUtils************** -->
    <select id="list" resultType="com.aladdin.mis.business.vo.BizDiaryVo">
        select <include refid="baseColumn"></include>
        from biz_diary t where t.sys005 = 1
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="userName  != null and userName != '' ">
            and t.user_name = #{userName}
        </if>
        <if test="userPic  != null and userPic != '' ">
            and t.user_pic = #{userPic}
        </if>
        <if test="content  != null and content != '' ">
            and t.content = #{content}
        </if>
        <if test="createDate  != null and createDate != '' ">
            and t.create_date = #{createDate}
        </if>
        <if test="createTime  != null and createTime != '' ">
            and t.create_time = #{createTime}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

</mapper>
