<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.business.BizMemoLogDao">

    <sql id="baseColumn">
        t.user_id,
        t.group_id,
        t.group_name,
        t.memo_id,
        t.content,
        t.log_type,
        t.create_time
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.business.entity.BizMemoLog" > 
        <result property="user_id" column="userId"/>
        <result property="group_id" column="groupId"/>
        <result property="group_name" column="groupName"/>
        <result property="memo_id" column="memoId"/>
        <result property="content" column="content"/>
        <result property="log_type" column="logType"/>
        <result property="create_time" column="createTime"/>
    </resultMap>

    <!-- *************GenerateXmlUtils************** -->
    <select id="list" resultType="com.aladdin.mis.business.vo.BizMemoLogVo">
        select <include refid="baseColumn"></include>
        from biz_memo_log t where t.sys005 = 1
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="groupId  != null and groupId != '' ">
            and t.group_id = #{groupId}
        </if>
        <if test="groupName  != null and groupName != '' ">
            and t.group_name = #{groupName}
        </if>
        <if test="memoId  != null and memoId != '' ">
            and t.memo_id = #{memoId}
        </if>
        <if test="content  != null and content != '' ">
            and t.content = #{content}
        </if>
        <if test="logType  != null and logType != '' ">
            and t.log_type = #{logType}
        </if>
        <if test="createTime  != null and createTime != '' ">
            and t.create_time = #{createTime}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

</mapper>
