    <sql id="baseColumn">
        t.id,
        t.post_id,
        t.reply_id,
        t.user_id,
        t.user_name,
        t.user_pic,
        t.to_user_id,
        t.to_user_name,
        t.to_user_pic,
        t.content,
        t.parent_id,
        t.thumb_num,
        t.reply_num,
        t.reply_time,
        t.terminal,
        t.top,
        t.first,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.business.entity.BizPostReply" >
        <id property="id" column="id"/>
        <result property="post_id" column="postId"/>
        <result property="reply_id" column="replyId"/>
        <result property="user_id" column="userId"/>
        <result property="user_name" column="userName"/>
        <result property="user_pic" column="userPic"/>
        <result property="to_user_id" column="toUserId"/>
        <result property="to_user_name" column="toUserName"/>
        <result property="to_user_pic" column="toUserPic"/>
        <result property="content" column="content"/>
        <result property="parent_id" column="parentId"/>
        <result property="thumb_num" column="thumbNum"/>
        <result property="reply_num" column="replyNum"/>
        <result property="reply_time" column="replyTime"/>
        <result property="terminal" column="terminal"/>
        <result property="top" column="top"/>
        <result property="first" column="first"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <!-- *************GenerateXmlUtils************** -->
    <select id="list" resultType="com.aladdin.mis.business.vo.BizPostReplyVo">
        select <include refid="baseColumn"></include>
        from biz_post_reply t where t.sys005 = 1
        <if test="postId  != null and postId != '' ">
            and t.post_id = #{postId}
        </if>
        <if test="replyId  != null and replyId != '' ">
            and t.reply_id = #{replyId}
        </if>
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="userName  != null and userName != '' ">
            and t.user_name = #{userName}
        </if>
        <if test="userPic  != null and userPic != '' ">
            and t.user_pic = #{userPic}
        </if>
        <if test="toUserId  != null and toUserId != '' ">
            and t.to_user_id = #{toUserId}
        </if>
        <if test="toUserName  != null and toUserName != '' ">
            and t.to_user_name = #{toUserName}
        </if>
        <if test="toUserPic  != null and toUserPic != '' ">
            and t.to_user_pic = #{toUserPic}
        </if>
        <if test="content  != null and content != '' ">
            and t.content = #{content}
        </if>
        <if test="parentId  != null and parentId != '' ">
            and t.parent_id = #{parentId}
        </if>
        <if test="thumbNum  != null and thumbNum != '' ">
            and t.thumb_num = #{thumbNum}
        </if>
        <if test="replyNum  != null and replyNum != '' ">
            and t.reply_num = #{replyNum}
        </if>
        <if test="replyTime  != null and replyTime != '' ">
            and t.reply_time = #{replyTime}
        </if>
        <if test="terminal  != null and terminal != '' ">
            and t.terminal = #{terminal}
        </if>
        <if test="top  != null and top != '' ">
            and t.top = #{top}
        </if>
        <if test="first  != null and first != '' ">
            and t.first = #{first}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

</mapper>
