<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.business.BizMemoRemindDao">

    <sql id="baseColumn">
        t.id,
        t.memo_id,
        t.remind_date,
        t.remind_time,
        t.repeat_type,
        t.interval_cycle,
        t.cycle_param,
        t.end_date,
        t.repeat_remind,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.business.entity.BizMemoRemind" > 
        <id property="id" column="id"/>
        <result property="memo_id" column="memoId"/>
        <result property="remind_date" column="remindDate"/>
        <result property="remind_time" column="remindTime"/>
        <result property="repeat_type" column="repeatType"/>
        <result property="interval_cycle" column="intervalCycle"/>
        <result property="cycle_param" column="cycleParam"/>
        <result property="end_date" column="endDate"/>
        <result property="repeat_remind" column="repeatRemind"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <!-- *************GenerateXmlUtils************** -->
    <select id="list" resultType="com.aladdin.mis.business.vo.BizMemoRemindVo">
        select <include refid="baseColumn"></include>
        from biz_memo_remind t where t.sys005 = 1
        <if test="memoId  != null and memoId != '' ">
            and t.memo_id = #{memoId}
        </if>
        <if test="remindDate  != null and remindDate != '' ">
            and t.remind_date = #{remindDate}
        </if>
        <if test="remindTime  != null and remindTime != '' ">
            and t.remind_time = #{remindTime}
        </if>
        <if test="repeatType  != null and repeatType != '' ">
            and t.repeat_type = #{repeatType}
        </if>
        <if test="intervalCycle  != null and intervalCycle != '' ">
            and t.interval_cycle = #{intervalCycle}
        </if>
        <if test="cycleParam  != null and cycleParam != '' ">
            and t.cycle_param = #{cycleParam}
        </if>
        <if test="endDate  != null and endDate != '' ">
            and t.end_date = #{endDate}
        </if>
        <if test="repeatRemind  != null and repeatRemind != '' ">
            and t.repeat_remind = #{repeatRemind}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

</mapper>
