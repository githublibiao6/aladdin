<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aladdin.mis.dao.manager.DeptDao">
    <!-- 获取所有的部门信息 -->
    <select id="list" resultType="com.aladdin.mis.chat.manager.vo.DeptVo">
        select * from be_dept where sys005=1
    </select>

    <!-- 根据id获取部门详细信息 -->
    <select id="findById" resultType="com.aladdin.mis.chat.manager.bean.Dept">
        select * from be_dept where id = #{id}
    </select>
</mapper>
