<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.chat.ChatGroupDao">

    <sql id="baseColumn">
        t.id,
        t.group_num,
        t.group_code,
        t.group_name,
        t.group_kind,
        t.group_notice,
        t.create_time,
        t.create_user,
        t.create_city,
        t.group_level,
        t.group_star,
        t.group_user,
        t.max_num,
        t.search_way,
        t.join_way,
        t.forbidden_speak,
        t.label,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.chat.entity.ChatGroup" > 
        <id property="id" column="id"/>
        <result property="group_num" column="groupNum"/>
        <result property="group_code" column="groupCode"/>
        <result property="group_name" column="groupName"/>
        <result property="group_kind" column="groupKind"/>
        <result property="group_notice" column="groupNotice"/>
        <result property="create_time" column="createTime"/>
        <result property="create_user" column="createUser"/>
        <result property="create_city" column="createCity"/>
        <result property="group_level" column="groupLevel"/>
        <result property="group_star" column="groupStar"/>
        <result property="group_user" column="groupUser"/>
        <result property="max_num" column="maxNum"/>
        <result property="search_way" column="searchWay"/>
        <result property="join_way" column="joinWay"/>
        <result property="forbidden_speak" column="forbiddenSpeak"/>
        <result property="label" column="label"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <select id="list" resultType="com.aladdin.mis.chat.vo.ChatGroupVo">
        select <include refid="baseColumn"></include>
        from chat_group t where t.sys005 = 1
        <if test="groupNum  != null and groupNum != '' ">
            and t.group_num = #{groupNum}
        </if>
        <if test="groupCode  != null and groupCode != '' ">
            and t.group_code = #{groupCode}
        </if>
        <if test="groupName  != null and groupName != '' ">
            and t.group_name = #{groupName}
        </if>
        <if test="groupKind  != null and groupKind != '' ">
            and t.group_kind = #{groupKind}
        </if>
        <if test="groupNotice  != null and groupNotice != '' ">
            and t.group_notice = #{groupNotice}
        </if>
        <if test="createTime  != null and createTime != '' ">
            and t.create_time = #{createTime}
        </if>
        <if test="createUser  != null and createUser != '' ">
            and t.create_user = #{createUser}
        </if>
        <if test="createCity  != null and createCity != '' ">
            and t.create_city = #{createCity}
        </if>
        <if test="groupLevel  != null and groupLevel != '' ">
            and t.group_level = #{groupLevel}
        </if>
        <if test="groupStar  != null and groupStar != '' ">
            and t.group_star = #{groupStar}
        </if>
        <if test="groupUser  != null and groupUser != '' ">
            and t.group_user = #{groupUser}
        </if>
        <if test="maxNum  != null and maxNum != '' ">
            and t.max_num = #{maxNum}
        </if>
        <if test="searchWay  != null and searchWay != '' ">
            and t.search_way = #{searchWay}
        </if>
        <if test="joinWay  != null and joinWay != '' ">
            and t.join_way = #{joinWay}
        </if>
        <if test="forbiddenSpeak  != null and forbiddenSpeak != '' ">
            and t.forbidden_speak = #{forbiddenSpeak}
        </if>
        <if test="label  != null and label != '' ">
            and t.label = #{label}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

