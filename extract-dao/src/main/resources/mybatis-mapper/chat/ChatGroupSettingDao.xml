<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.chat.ChatGroupSettingDao">

    <sql id="baseColumn">
        t.id,
        t.search_way,
        t.join_way,
        t.forbidden_speak,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.chat.entity.ChatGroupSetting" > 
        <id property="id" column="id"/>
        <result property="search_way" column="searchWay"/>
        <result property="join_way" column="joinWay"/>
        <result property="forbidden_speak" column="forbiddenSpeak"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <select id="list" resultType="com.aladdin.mis.chat.vo.ChatGroupSettingVo">
        select <include refid="baseColumn"></include>
        from chat_group_setting t where t.sys005 = 1
        <if test="searchWay  != null and searchWay != '' ">
            and t.search_way = #{searchWay}
        </if>
        <if test="joinWay  != null and joinWay != '' ">
            and t.join_way = #{joinWay}
        </if>
        <if test="forbiddenSpeak  != null and forbiddenSpeak != '' ">
            and t.forbidden_speak = #{forbiddenSpeak}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

    <!-- *************GenerateXmlUtils************** -->
</mapper>
