<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.chat.ChatListDao">

    <sql id="baseColumn">
        t.id,
        t.user_id,
        t.chat_kind,
        t.chat_id,
        t.chat_name,
        t.unread_count,
        t.last_message,
        t.picture_url,
        t.send_time,
        t.chat_label,
        t.top,
        t.status,
        t.chat_level,
        t.interest,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.chat.entity.ChatList" > 
        <id property="id" column="id"/>
        <result property="user_id" column="userId"/>
        <result property="chat_kind" column="chatKind"/>
        <result property="chat_id" column="chatId"/>
        <result property="chat_name" column="chatName"/>
        <result property="unread_count" column="unreadCount"/>
        <result property="last_message" column="lastMessage"/>
        <result property="picture_url" column="pictureUrl"/>
        <result property="send_time" column="sendTime"/>
        <result property="chat_label" column="chatLabel"/>
        <result property="top" column="top"/>
        <result property="status" column="status"/>
        <result property="chat_level" column="chatLevel"/>
        <result property="interest" column="interest"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <select id="list" resultType="com.aladdin.mis.chat.vo.ChatListVo">
        select <include refid="baseColumn"></include>
        from chat_list t where t.sys005 = 1
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="chatKind  != null and chatKind != '' ">
            and t.chat_kind = #{chatKind}
        </if>
        <if test="chatId  != null and chatId != '' ">
            and t.chat_id = #{chatId}
        </if>
        <if test="chatName  != null and chatName != '' ">
            and t.chat_name = #{chatName}
        </if>
        <if test="unreadCount  != null and unreadCount != '' ">
            and t.unread_count = #{unreadCount}
        </if>
        <if test="lastMessage  != null and lastMessage != '' ">
            and t.last_message = #{lastMessage}
        </if>
        <if test="pictureUrl  != null and pictureUrl != '' ">
            and t.picture_url = #{pictureUrl}
        </if>
        <if test="sendTime  != null and sendTime != '' ">
            and t.send_time = #{sendTime}
        </if>
        <if test="chatLabel  != null and chatLabel != '' ">
            and t.chat_label = #{chatLabel}
        </if>
        <if test="top  != null and top != '' ">
            and t.top = #{top}
        </if>
        <if test="status  != null and status != '' ">
            and t.status = #{status}
        </if>
        <if test="chatLevel  != null and chatLevel != '' ">
            and t.chat_level = #{chatLevel}
        </if>
        <if test="interest  != null and interest != '' ">
            and t.interest = #{interest}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

    <!-- *************GenerateXmlUtils************** -->
</mapper>
