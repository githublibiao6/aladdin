<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.aladdin.mis.dao.chat.ChatGroupUserDao">

    <sql id="baseColumn">
        t.id,
        t.group_id,
        t.user_id,
        t.join_time,
        t.role,
        t.chat_level,
        t.picture_url,
        t.nick_name,
        t.record_show_id,
        t.apply_id,
        t.last_line,
        t.last_speak,
        t.sys000,
        t.sys001,
        t.sys002,
        t.sys003,
        t.sys004,
        t.sys005,
        t.sys006,
        t.sys007
    </sql>

    <resultMap id="baseResultMap" type="com.aladdin.mis.chat.entity.ChatGroupUser" > 
        <id property="id" column="id"/>
        <result property="group_id" column="groupId"/>
        <result property="user_id" column="userId"/>
        <result property="join_time" column="joinTime"/>
        <result property="role" column="role"/>
        <result property="chat_level" column="chatLevel"/>
        <result property="picture_url" column="pictureUrl"/>
        <result property="nick_name" column="nickName"/>
        <result property="record_show_id" column="recordShowId"/>
        <result property="apply_id" column="applyId"/>
        <result property="last_line" column="lastLine"/>
        <result property="last_speak" column="lastSpeak"/>
        <result property="sys000" column="sys000"/>
        <result property="sys001" column="sys001"/>
        <result property="sys002" column="sys002"/>
        <result property="sys003" column="sys003"/>
        <result property="sys004" column="sys004"/>
        <result property="sys005" column="sys005"/>
        <result property="sys006" column="sys006"/>
        <result property="sys007" column="sys007"/>
    </resultMap>

    <select id="list" resultType="com.aladdin.mis.chat.vo.ChatGroupUserVo">
        select <include refid="baseColumn"></include>
        from chat_group_user t where t.sys005 = 1
        <if test="groupId  != null and groupId != '' ">
            and t.group_id = #{groupId}
        </if>
        <if test="userId  != null and userId != '' ">
            and t.user_id = #{userId}
        </if>
        <if test="joinTime  != null and joinTime != '' ">
            and t.join_time = #{joinTime}
        </if>
        <if test="role  != null and role != '' ">
            and t.role = #{role}
        </if>
        <if test="chatLevel  != null and chatLevel != '' ">
            and t.chat_level = #{chatLevel}
        </if>
        <if test="pictureUrl  != null and pictureUrl != '' ">
            and t.picture_url = #{pictureUrl}
        </if>
        <if test="nickName  != null and nickName != '' ">
            and t.nick_name = #{nickName}
        </if>
        <if test="recordShowId  != null and recordShowId != '' ">
            and t.record_show_id = #{recordShowId}
        </if>
        <if test="applyId  != null and applyId != '' ">
            and t.apply_id = #{applyId}
        </if>
        <if test="lastLine  != null and lastLine != '' ">
            and t.last_line = #{lastLine}
        </if>
        <if test="lastSpeak  != null and lastSpeak != '' ">
            and t.last_speak = #{lastSpeak}
        </if>
        <if test= " sortInfo  != null and sortInfo != '' ">
           order by ${sortInfo}
        </if>
    </select>

    <!-- *************GenerateXmlUtils************** -->
</mapper>
