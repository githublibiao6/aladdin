<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aladdin.mis.dao.manager.RoleDao">

    <select id="findById" resultType="com.aladdin.mis.manager.bean.Role">
        select * from be_role where id=#{id}
    </select>


    <select id="list" resultType="com.aladdin.mis.manager.bean.Role">
        select t.*, a.app_name from be_role t
         left join be_application a on t.app_id = a.id
         where t.sys005 = 1
    </select>


    <!--<update  id="remove" parameterType="com.apps.omnipotent.manager.bean.Role">
        update be_role  set delete_flag = 0 where id=#{id}
    </update >

    <insert id="add" parameterType="com.apps.omnipotent.manager.bean.Role">
    	insert into be_role (id,code,name,notes,effective_flag,delete_flag)
    	values(#{id},#{code},#{name},#{notes},'1','1')
    </insert>

    <update  id="update" parameterType="com.apps.omnipotent.manager.bean.Role">
    	update be_role set name=#{name},code=#{code},notes=#{notes}
         where id=#{id}
    </update >-->
</mapper>
